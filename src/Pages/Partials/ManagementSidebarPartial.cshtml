@* Generator: Template TypeVisibility: Internal GeneratePrettyNames: True Namespace: Hangfire.Community.Dashboard.Forms.Pages.Partials *@
@using Hangfire.Dashboard
@using Hangfire.Community.Dashboard.Forms
@using Hangfire.Dashboard.Pages
@inherits Hangfire.Dashboard.RazorPage
@{
}

<nav class="hdm-sidebar-nav" aria-label="Job Queues">
    <!-- Mobile Navigation -->
    <ul class="nav nav-tabs hdm-mobile-nav hidden-md hidden-lg" role="tablist">
        @foreach (var item in Items)
        {
            var itemValue = item(this);
            var activeClass = itemValue.Active ? "active" : "";
            var ariaCurrent = itemValue.Active ? "page" : null;
            <li role="presentation" class="@activeClass">
                <a href="@itemValue.Url" @(ariaCurrent != null ? $"aria-current=\"{ariaCurrent}\"" : "")>
                    <span class="hdm-nav-text">@itemValue.Text</span>
                </a>
            </li>
        }
    </ul>

    <!-- Desktop Navigation -->
    <ul class="nav nav-pills nav-stacked hdm-desktop-nav visible-md-block visible-lg-block" role="navigation">
        @foreach (var item in Items)
        {
            var itemValue = item(this);
            var activeClass = itemValue.Active ? "active" : "";
            var ariaCurrent = itemValue.Active ? "page" : null;
            <li role="presentation" class="@activeClass">
                <a href="@itemValue.Url" @(ariaCurrent != null ? $"aria-current=\"{ariaCurrent}\"" : "")>
                    <span class="glyphicon glyphicon-folder-open hdm-nav-icon" aria-hidden="true"></span>
                    <span class="hdm-nav-text">@itemValue.Text</span>
                </a>
            </li>
        }
    </ul>
</nav>
